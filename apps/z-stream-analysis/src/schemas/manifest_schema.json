{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://z-stream-analysis/schemas/manifest.schema.json",
  "title": "Z-Stream Analysis Manifest",
  "description": "Schema for manifest.json - index file for multi-file data structure",
  "type": "object",
  "required": ["version", "file_structure", "files"],
  "additionalProperties": true,
  "properties": {
    "version": {
      "type": "string",
      "description": "Data structure version",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "examples": ["2.0.0"]
    },
    "file_structure": {
      "type": "string",
      "enum": ["multi-file", "single-file"],
      "description": "Type of file structure"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of creation"
    },
    "files": {
      "type": "object",
      "description": "Map of file names to their metadata",
      "additionalProperties": {
        "type": "object",
        "required": ["description"],
        "properties": {
          "description": {
            "type": "string",
            "description": "Human-readable description of file contents"
          },
          "required": {
            "type": "boolean",
            "default": false,
            "description": "Whether this file is required for analysis"
          },
          "load_first": {
            "type": "boolean",
            "default": false,
            "description": "Whether this file should be loaded first"
          },
          "load_on_demand": {
            "type": "boolean",
            "default": false,
            "description": "Whether this file should be loaded on-demand"
          },
          "use_case": {
            "type": "string",
            "description": "When to load this file"
          },
          "estimated_tokens": {
            "type": "integer",
            "minimum": 0,
            "description": "Estimated token count for this file"
          }
        }
      }
    },
    "workflow": {
      "type": "array",
      "description": "Ordered steps for AI analysis workflow",
      "items": {
        "type": "string"
      }
    },
    "backward_compatibility": {
      "type": "object",
      "description": "Information about backward compatibility",
      "properties": {
        "raw-data.json": {
          "type": "string",
          "description": "Status of raw-data.json"
        },
        "legacy_support": {
          "type": "boolean",
          "description": "Whether legacy format is still supported"
        }
      }
    }
  }
}
